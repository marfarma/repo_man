<% form_for @repository do |form| %>
<%= custom_error_messages(form) %>
<div class="text_field">
  <%= form.label :name %>
  <%= form.text_field :name %>
</div>
<div class="select">
  <%= form.label :scm %>
  <%= form.select :scm, Scm::SUPPORTED_SCM.collect{|s| [s,s]} %>
</div>
<p class="buttons">
  <%= link_to_function 'Create Repository', 'this.parentNode.parentNode.submit();' %>
</p>
<% end %>
